{
	"compilerOptions": {
		"noEmit": true,
		"checkJs": true,
		"strict": true,
		"allowJs": true,
		"target": "ESNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"module": "NodeNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowImportingTsExtensions": true,
		"forceConsistentCasingInFileNames": false
	},
	"include": ["packages", "test", "scripts"],
	"exclude": ["node_modules", "**/import-meta-shim.js", "test/**/project"]
}

{
	"name": "@frugal-node/workspace",
	"workspaces": ["packages/*"],
	"type": "module",
	"scripts": {
		"test": "node scripts/test.js",
		"lint": "npx biome check .",
		"typecheck": "tsc -p .",
		"compile:livereload": "node packages/frugal/src/watcher/livereload/compileLiveReload.js",
		"publish:frugal-node": "npm publish -w frugal-node",
		"publish:exporter-static": "npm publish -w @frugal-node/exporter-static",
		"publish:exporter-vercel": "npm publish -w @frugal-node/exporter-vercel",
		"publish:plugin-css": "npm publish -w @frugal-node/plugin-css",
		"publish:plugin-script": "npm publish -w @frugal-node/plugin-script",
		"publish:all": "npm run publish:frugal-node && npm run publish:exporter-static && npm run publish:exporter-vercel && npm run publish:plugin-css && npm run publish:plugin-script"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.5.3",
		"@types/node": "^20.11.17",
		"c8": "^9.1.0",
		"puppeteer": "^22.0.0",
		"typescript": "^5.3.3"
	}
}
